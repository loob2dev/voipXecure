<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    tools:context="com.XECUREVoIP.security.createSecurity.GenSecurityActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorA"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tab1"
            style="@style/font15"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:gravity="bottom|center_horizontal"
            android:text="@string/tab_lock"/>

        <TextView
            android:id="@+id/tv_tab2"
            style="@style/font15"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:gravity="bottom|center_horizontal"
            android:text="@string/tab_pattern"/>
    </LinearLayout>


    <view
        android:id="@+id/viewpager"
        class="com.XECUREVoIP.security.MySwipeableViewPager"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="@dimen/gen_layout_margin"
            android:layout_marginRight="@dimen/gen_layout_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/password_textview_margin"
            android:layout_marginTop="@dimen/password_textview_margin"
            android:background="@drawable/splash_logo"
            android:orientation="vertical"></LinearLayout>
    </ScrollView>


</LinearLayout>