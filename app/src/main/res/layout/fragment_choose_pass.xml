<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.XECUREVoIP.security.changeSecurity.ChoosePassFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorH"
        android:layout_below="@+id/topbar"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:id="@+id/manage_pattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/security_button"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/setting_security_label"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="@string/set_pattern"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/desc_pattern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/setting_security_btn"
                    android:layout_marginRight="5dp"
                    android:text="@string/set"/>
                <ImageView
                    android:id="@+id/next_arrow00"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/next_arrow"/>
                <ImageView
                    android:id="@+id/before_arrow00"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/befor_arrow"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/missed_calls_select"
            android:background="@color/colorF"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"/>
        <RelativeLayout
            android:id="@+id/manage_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/security_button"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/setting_security_label"
                android:layout_alignParentLeft="true"
                android:text="@string/set_pass"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/desc_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/setting_security_btn"
                    android:layout_marginRight="5dp"
                    android:text="@string/change"/>
                <ImageView
                    android:id="@+id/next_arrow01"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/next_arrow"/>
                <ImageView
                    android:id="@+id/before_arrow01"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/befor_arrow"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/gen_layout_margin"
            android:layout_marginRight="@dimen/gen_layout_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/password_textview_margin"
            android:layout_marginTop="@dimen/password_textview_margin"
            android:background="@drawable/splash_logo_transparent"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>

</FrameLayout>
