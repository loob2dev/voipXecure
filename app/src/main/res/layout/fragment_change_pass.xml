<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorH"
    android:gravity="center_horizontal"
    tools:context="com.XECUREVoIP.security.changeSecurity.ChangePassFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/splash_bk_transparent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:id="@+id/textView6"
            style="@style/font8"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:padding="10dp"
            android:text="@string/change_app_pass"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/change_pass_margin_bottom">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TYPE IN YOUR EXISTING PASSWORD"
                    style="@style/detail_label"/>

                <EditText
                    android:id="@+id/id_edtOldPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/change_pass_margin_bottom">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/detail_label"
                    android:text="TYPE IN YOUR NEW PASSWORD" />

                <EditText
                    android:id="@+id/id_edtNewPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/change_pass_margin_bottom">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    style="@style/detail_label"
                    android:layout_height="wrap_content"
                    android:text="CONFIRM NEW PASSWORD" />

                <EditText
                    android:id="@+id/id_edtConPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_changePass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/assistant_button"
            android:textColor="@drawable/assistant_button_text_color"
            android:text="CHANGE PASSWORD"
            style="@style/detail_label"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"/>

    </LinearLayout>
</RelativeLayout>
